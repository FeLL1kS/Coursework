<Window x:Class="Library.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Добавление/Редактирование автора" Height="145" Width="365">
    <Grid>
        <TextBox x:Name="tbFullName" HorizontalAlignment="Left" Height="23" Margin="148,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <TextBlock HorizontalAlignment="Left" Margin="15,28,0,0" TextWrapping="Wrap" Text="Фамилия Имя Отчество" VerticalAlignment="Top" Width="133"/>
        <Button x:Name="btnSave" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Margin="15,70,0,0" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Margin="194,70,0,0" Click="btnCancel_Click"/>
    </Grid>
</Window>
